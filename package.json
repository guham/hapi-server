{
  "name": "hapi-server",
  "version": "1.0.0",
  "description": "API with hapi",
  "repository": "git@github.com:guham/hapi-server.git",
  "author": "Guillaume Hamoniez <guham.dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/src/server.js",
    "dev": "NODE_ENV=development nodemon --config nodemon.json",
    "build": "tsc",
    "lint": "eslint --fix 'src/**'",
    "doc": "raml2html doc/contract.raml > doc/html/index.html"
  },
  "dependencies": {
    "@hapi/hapi": "^19.1.1",
    "dotenv": "^8.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/hapi__hapi": "^19.0.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "raml2html": "^7.5.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
